<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.sell_fragment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/sellyourbook_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SELL YOUR BOOK"
        android:textSize="30sp"
        android:gravity="center"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:textColor="@color/teal_700"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Name of Book :"
            android:gravity="center"
            android:textStyle="bold"

            android:textColor="@color/teal_700" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sell_name"
            android:textColor="@color/teal_700"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Standard :"
            android:gravity="center"
            android:textStyle="bold"

            android:textColor="@color/teal_700" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sell_standard"
            android:textColor="@color/teal_700"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Medium :"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/teal_700" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sell_medium"
            android:textColor="@color/teal_700"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="MRP :"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/teal_700" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sell_mrp"
            android:textColor="@color/teal_700"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Selling Price :"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/teal_700" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sell_price"
            android:textColor="@color/teal_700"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Condition:- "
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/teal_700" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sell_condition"
            android:textColor="@color/teal_700"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="8dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/sell_cod"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="COD :"
            android:textStyle="bold"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            android:textColor="@color/teal_700" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Return"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            android:textStyle="bold"
            android:id="@+id/sell_return"
            android:textColor="@color/teal_700"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Delivery time :"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/teal_700" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sell_delivery"
            android:textColor="@color/teal_700"/>
    </LinearLayout>


    <TextView
        android:id="@+id/sell_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/sell_upload"
        android:gravity="center"
        android:text="Upload"
        android:layout_marginTop="24dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <ProgressBar
        android:id="@+id/sell_progressbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"/>

</LinearLayout>


</androidx.core.widget.NestedScrollView>


